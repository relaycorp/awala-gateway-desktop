{
  "name": "ui",
  "version": "0.0.0",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "main": "app/main.js",
  "scripts": {
    "license-report": "license-report --output=json > src/licenses.json",
    "build": "run-s license-report tsc webpack",
    "webpack": "webpack --config ./webpack.config.js",
    "tsc": "tsc -p tsconfig.json",
    "start": "npm run build && electron ./app/main.js",
    "clean": "trash build test coverage",
    "cov": "run-s build test:unit && opn coverage/lcov-report/index.html",
    "dist": "electron-builder",
    "test": "jest --coverage",
    "test:functional": "jest --config jest.config.functional.js --runInBand --detectOpenHandles",
    "test:ci:unit:jest": "jest --config jest.config.ci.js --coverage"
  },
  "private": "true",
  "dependencies": {
    "abortable-iterator": "^3.0.0",
    "bufferutil": "^4.0.3",
    "it-pipe": "^1.1.0",
    "pino": "^6.11.2",
    "utf-8-validate": "^5.0.4",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/is-valid-domain": "0.0.0",
    "@types/jest": "^26.0.22",
    "@types/mini-css-extract-plugin": "^1.4.1",
    "@types/pino": "^6.3.6",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/verror": "^1.10.4",
    "copy-webpack-plugin": "^8.1.1",
    "css-loader": "^5.2.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "html-webpack-plugin": "^5.2.0",
    "is-valid-domain": "0.0.19",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "license-report": "^4.5.0",
    "mini-css-extract-plugin": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.3",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  },
  "build": {
    "appId": "tech.relaycorp.gateway",
    "linux": {
      "target": "rpm"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
