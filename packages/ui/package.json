{
  "name": "ui",
  "version": "0.0.0",
  "files": [
    "lib"
  ],
  "main": "app/main.js",
  "scripts": {
    "postinstall": "run-s link-daemon",
    "link-daemon": "npm link --force ../daemon",
    "report-dependencies": "node report-dependencies.js",
    "build": "run-s --print-name report-dependencies tsc webpack",
    "webpack": "webpack --config ./webpack.config.js",
    "tsc": "tsc -p tsconfig.json",
    "start": "electron ./app/main.js",
    "clean": "rimraf build test coverage dist app",
    "cov": "run-s build test:unit && opn coverage/lcov-report/index.html",
    "dist": "electron-builder --config electron-builder.yml --publish=never",
    "test": "cross-env NODE_OPTIONS='--unhandled-rejections=warn' jest --coverage",
    "test:functional": "jest --config jest.config.functional.js --runInBand --detectOpenHandles",
    "test:ci:unit:jest": "cross-env NODE_OPTIONS='--unhandled-rejections=warn' jest --config jest.config.ci.js --coverage"
  },
  "private": "true",
  "dependencies": {
    "abortable-iterator": "^3.0.0",
    "bufferutil": "^4.0.3",
    "daemon": "file:../daemon",
    "pino": "^6.12.0",
    "utf-8-validate": "^5.0.5",
    "verror": "^1.10.1",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.5",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.0.0",
    "@types/is-valid-domain": "0.0.1",
    "@types/jest": "^27.0.3",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/pino": "^6.3.9",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@types/verror": "^1.10.5",
    "@types/ws": "^7.4.6",
    "abort-controller": "^3.0.0",
    "copy-webpack-plugin": "^10.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "electron": "^15.3.0",
    "electron-builder": "^22.14.5",
    "fetch-mock-jest": "^1.5.1",
    "html-webpack-plugin": "^5.5.0",
    "is-valid-domain": "0.1.2",
    "it-pipe": "^1.1.0",
    "it-ws": "^4.0.0",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "license-report": "^4.5.0",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.4",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1"
  }
}
